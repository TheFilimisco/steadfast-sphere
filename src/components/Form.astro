---
import ContactForm from "./ContactForm"
---

<section>
     <div class="flex justify-center items-center">
            <h2 class="bg-[#85282b] inline-block mb-5 py-2 px-5 text-white text-6xl font-['Crimson-Pro']">Contact Me</h2>
        </div>
    <div class="mx-4 sm:mx-10 md:mx-20 my-10 w-auto h-auto p-4 sm:p-10 md:p-20 flex text-2xl justify-center items-center">
  <div class="flex h-auto md:h-[40rem] w-full">
    
    <!-- Imagen: visible solo en pantallas medianas en adelante -->
    <img 
      src="/form.jpeg" 
      alt="form" 
      class="hidden md:block object-cover w-1/2 h-full brightness-75 rounded-l-xl"
    />

    <!-- Formulario -->
    <div class="w-full md:w-1/2 h-full rounded-r-xl ">
      <ContactForm client:load />
    </div>

  </div>
</section>  